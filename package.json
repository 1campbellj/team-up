{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "cross-env NODE_ENV=production remix build",
    "build:css": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --minify",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "dev:css": "tailwindcss --output ./app/styles/tailwind.css --config ./config/tailwind.js --watch",
    "postinstall": "remix setup cloudflare-pages",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build --kv DB -b $(cat .env)",
    "start": "npm run dev:wrangler"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "tailwindcss": "^3.0.18"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "esbuild": "0.13.14",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "typescript": "^4.1.2",
    "wrangler": "0.0.14"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
